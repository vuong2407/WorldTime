<div class="content-wrapper">

    <div class="container">
        <div class="row">
            <div class="col-lg-3 grid-margin">
                <div class="card">
                    <div class="card-body">
                        <h2>
                            <%= currentUser.username %>
                        </h2>
                        <ul class="vertical-menu">
                            <li><a href="/user/profile">Profile</a></li>
                            <li><a href="/user/create-news">Create News</a></li>
                            <li><a href="/user/update-news">Illegal News</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 stretch-card grid-margin">
                <div class="card">
                    <div class="card-body">

                        <% if (listUpdateNews) { %>
                            <% listUpdateNews.forEach(function(news) { %>
                                <div class="row">
                                    <div class="col-sm-4 grid-margin">
                                        <div class="position-relative">
                                            <div class="rotate-img">
                                                <img src="/uploads/imageNews/<%= news.image %>" alt="thumb"
                                                    class="img-fluid">
                                            </div>
                                            <!-- <div class="badge-positioned">
                                                <span class="badge badge-danger font-weight-bold">Flash
                                                    news</span>
                                            </div> -->
                                        </div>
                                    </div>
                                    <div class="col-sm-8  grid-margin">
                                        <h2 class="mb-2 font-weight-600">
                                            <a href="/user/update-news/<%= news._id %>">
                                                <%= news.title %>
                                            </a>

                                        </h2>
                                        <div class="fs-13 mb-2">
                                            <span class="mr-2">
                                                <%= news.author %>
                                            </span>10 Minutes ago
                                        </div>
                                        <p class="mb-0 h-25">
                                            <%= news.sdescription %>
                                        </p>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>